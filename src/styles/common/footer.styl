.footer
    width 100%
.footer__wrap
    max-width 1640px
    padding 0 25px
    margin 0 auto
.footer__up
    width 100%
    border-top 1px solid #F2F2F2
    // border-bottom 1px solid #F2F2F2
    padding 100px 0
    display flex
    flex-direction column
    justify-content center
    text-align center
    +adapt(1200px)
        padding 50px 0
.footer__up__logo
    max-width 300px
    margin 30px auto 0
.footer__contacts-link
    font(HN-B, black, 20px)
    margin 10px 0
.footer__down
    width 100%
    text-align center
    margin 20px 0
    padding 35px 0
    height 135px
    background linear-gradient(0.25turn, #6200FF, #A716E7, #4F33C8, #2560E5, #00C7FF)
.footer__down-txt
    font(HN, white, 14px)
    display flex
    flex-direction column
    justify-content center
.footer__down-language 
    display flex
    justify-content center
    margin-top 20px
    align-items center
.footer__down-language__txt
    font(HN, white, 14px)

.footer__down-language__images
    width 21px
    margin-right 10px

.footer__up__logo-txt
    font('AG', black, 47px)
    +adapt(650px)
        font-size 36px
