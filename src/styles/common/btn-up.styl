.block__btn-up
    display none
    position fixed
    bottom 3%
    right 2%
    z-index 1000
    cursor pointer

    &:hover
        .btn__up
            tran()
            transform translateY(-5px)
.btn__up
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 70px
    height 70px
    tran()
    +adapt(768px)
        width 50px
        height 50px
