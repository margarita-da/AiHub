.section-color
    background linear-gradient(to right bottom, #a716e7, #9721e2, #8728dd, #762dd7, #6630d1, #5045da, #3555e1, #0063e6, #0080f4, #0099fc, #00b1ff, #00c7ff);
.padding-130
    padding 130px 0
    +adapt(468px)
        padding 90px 0 
.padding-300
    padding 300px 0
    +adapt(468px)
        padding 150px 0
.h2__section-color
    font(HN-B, white, 40px)
    text-align center
    margin 0 auto
    width 45%
    +adapt(1200px)
        width 80%
        font-size 35px
    +adapt(768px)
        width 100%
        font-size 25px

.section-color__descr
    font(HN, white, 24px)
    margin 0 auto
    width 45%
    +adapt(1200px)
        width 80%
        font-size 20px
    +adapt(769px)
        width 100%
        font-size 18px
