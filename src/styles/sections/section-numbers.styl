.section-numbers
    background-color #FBFBFD
    padding 200px 0
.numbers__list
    display flex
    flex-wrap wrap
    margin-right -1%
    margin-top 20px
    +adapt(768px)
        justify-content center
        margin-right 0
.numbers__item
    width 32%
    height 300px
    margin 0 1% 20px 0
    background-color white
    display flex
    flex-direction column
    align-items center
    justify-content center
    +adapt(768px)
        width 70%
        margin-right 0
    +adapt(480px)
        width 100%
.numbers__descr
    font(HN, #86868B, 24px)
    text-align center
    margin-top 20px
    margin-bottom 50px
    +adapt(1200px)
        font-size 20px
    +adapt(992px)
        font-size 16px
.numbers__item__num
    font(HN-B, #45286F, 60px)
    +adapt(1200px)
        font-size 50px
    +adapt(480px)
        font-size 30px
.numbers__item__txt
    font(HN, black, 20px)
    +adapt(480px)
        font-size 16px
