.section-form
    padding 250px 0
    +adapt(1440px)
        padding 130px 0
    +adapt(480px)
        padding 70px 0
.box
    width 230px
    height 230px
    background-color #DEB7F5
    border-radius 50%
    display flex
    justify-content center
    align-items center
    margin 0 auto
    cursor pointer
    position relative
    +adapt(992px)
        width 200px
        height 200px
.mt-100
    margin 0 auto
    margin-top 100px
.mb-100
    margin 0 auto
    margin-bottom 100px
.mb-50
    margin 0 auto
    margin-bottom 50px
.pulsator
    width 200px
    height 200px
    display flex
    justify-content center
    align-items center
    background-image: linear-gradient(to right bottom, #a716e7, #9721e2, #8728dd, #762dd7, #6630d1, #5045da, #3555e1, #0063e6, #0080f4, #0099fc, #00b1ff, #00c7ff);
    border-radius 50%
    +adapt(992px)
        width 170px
        height 170px

.pulsator-wr
    position absolute
    width 100%
    height 100%
    border-radius 50%
    background-color #a716e7
    opacity 0
    &:hover
        opacity 1
        animation: puls 1.5s ease-out infinite normal
.pulsator_txt
    font(HN-B, white, 24px)
    text-align center
.block-form
    position fixed
    z-index -10
    opacity 0
    tran()

.block-form-show
    z-index 10
    opacity 1
    top 50%
    left 50%
    transform translate(-50%,-50%)
.block-form-close
    position absolute
    right -20px
    top 10px
    cursor pointer
.line1
    background-color #a716e7
    width 32px
    height 8px
    border-radius 5px
    transform rotate(45deg)
    position:absolute
.line2
    background-color #2560E5
    width 32px
    height 8px
    border-radius 5px
    transform rotate(-45deg)
    position absolute
@keyframes puls
  from
    transform:scale(1)
    opacity.5
  
  to
    opacity: 0
    transform:scale(1.4)
 